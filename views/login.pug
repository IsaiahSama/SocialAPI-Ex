extends layout

block preBody 
    link(rel="stylesheet", href="/stylesheets/login.css")
    title SocialEx - Login
block content
    center 
        h1 Welcome back to Social Ex
    .container
        .content
            h2 Login
            form(action="/login/" method="POST")
                div 
                    label.form-label(for="testemail") Email:
                    input#email(type="email", name="testemail")
                div 
                    label.form-label(for="password") Password:
                    input#password(type="password", name="password") 
                div
                    button#submit.btn(type="submit") Log In
            hr 
            button.btn
                a(href="/login/register") Register